<ModuleProperties moduleName="Impersonation" version="1.0" >
    <Callbacks length="0" order="1" timeout="600" header="#WILL NOT BE SHOWN#" />
    <Callbacks length="1" order="4" timeout="600" header="You are not authorized to impersonate!" template="impblocked.jsp" >
    </Callbacks>
    <Callbacks length="2" order="2" timeout="600" header="UserID to Impersonate: " >
        <NameCallback >
            <Prompt>#IMPERSONATIONID#</Prompt>
        </NameCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value> Submit </Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>    
    <Callbacks length="2" order="3" timeout="600" header="UserID to Impersonate: " >
        <NameCallback>
            <Prompt>User Name:</Prompt>
        </NameCallback>
        <PasswordCallback echoPassword="false" >
            <Prompt>Password:</Prompt>
        </PasswordCallback>        
    </Callbacks>
</ModuleProperties>